            android:textColor="#FFFFFF"
            android:text="Convidados:"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#40ffffff"
            android:padding="5dp"
