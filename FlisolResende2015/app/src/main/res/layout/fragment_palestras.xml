                        android:layout_marginLeft="5dp"
                        />

                    <ImageView
                        android:id="@+id/emailleo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/email"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


